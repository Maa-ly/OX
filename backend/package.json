{
  "name": "odx-oracle-service",
  "version": "1.0.0",
  "description": "Oracle service for ODX - bridges Walrus storage to Sui smart contracts",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "node --watch src/server.js",
    "build": "echo 'Backend does not require build step'",
    "test": "node --test tests/**/*.test.js",
    "lint": "eslint src/",
    "format": "prettier --write \"src/**/*.js\"",
    "install:walrus": "suiup install walrus@testnet"
  },
  "keywords": [
    "walrus",
    "sui",
    "oracle",
    "odx",
    "express",
    "api"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@mysten/sui": "^1.45.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "node-cron": "^3.0.3",
    "winston": "^3.11.0",
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.5"
  }
}
